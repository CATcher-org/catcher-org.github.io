{
  "baseUrl": "",
  "titlePrefix": "CATcher",
  "style": {
    "codeTheme": "light"
  },
  "ignore": [
    "_markbind/layouts/*",
    "_markbind/logs/*",
    "_site/*",
    "site.json",
    "*.md",
    "*.njk",
    ".git/*",
    "node_modules/*"
  ],
  "pagesExclude": ["node_modules/*"],
  "pages": [
    {
      "glob": ["**/*.md"]
    },
    {
      "glob": ["dg/*.md"],
      "frontmatter": {
        "layout": "dg-layout.md"
      }
    },
    {
      "glob": ["ug/*.md"],
      "frontmatter": {
        "layout": "ug-layout.md"
      }
    }
  ],
  "deploy": {
    "message": "Site Update."
  }
}
